#include <stdio.h>
#include <stdlib.h>

int main()
{
	int n, s, i;

	printf("soma dos n primeiros numeros interiros \n");
	printf("entre com um numero n para obter a soma dos n primeiros numeros inteiros \n");
	scanf("%i \n", &n);
	s = 0;
	i = 1;
	
	
	while (i <= n){	
	s = s + i;
	i = i + 1;
}
	printf("%i \n", s ); 
	return 0;
}
